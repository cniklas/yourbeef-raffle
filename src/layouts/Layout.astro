---
export interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="de">
	<!-- prettier-ignore -->
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width">

		<style is:inline>@font-face{font-display:swap;font-family:Montserrat;font-style:normal;font-weight:400;src:url('/fonts/montserrat-v25-latin-regular.woff2') format('woff2')}@font-face{font-display:swap;font-family:Montserrat;font-style:normal;font-weight:600;src:url('/fonts/montserrat-v25-latin-600-subset.woff2') format('woff2')}@font-face{font-display:swap;font-family:'Fjalla One';font-style:normal;font-weight:400;src:url('../fonts/fjalla-one-v15-latin-regular-subset.woff2') format('woff2')}body{font-family:Montserrat,-apple-system,'Helvetica Neue',Arial,sans-serif}</style>
		<link rel="preload" as="font" type="font/woff2" href="/fonts/montserrat-v25-latin-regular.woff2" crossorigin>
		<link rel="preload" as="font" type="font/woff2" href="/fonts/montserrat-v25-latin-600-subset.woff2" crossorigin>
		<link rel="preload" as="font" type="font/woff2" href="/fonts/fjalla-one-v15-latin-regular-subset.woff2" crossorigin>

		<link rel="icon" type="image/x-icon" href="favicon.png">
		<title>{title}</title>

		<meta name="description" content="Yourbeef Gewinnspiel">
		<meta name="robots" content="noindex,follow">
	</head>

	<body class="flex flex-col">
		<main class="grid flex-auto justify-center px-4 py-5 text-center">
			<slot />
		</main>

		<footer class="grid place-content-center bg-[--footer-bg] px-4 py-5 text-sm text-[--footer-text]">
			<div>
				<a href="https://yourbeef.de/">Yourbeef.de</a> • <a href="https://yourbeef.de/impressum">impressum</a> • <a
					href="https://yourbeef.de/datenschutz">Datenschutz</a
				>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--page-bg: hsl(0, 0%, 8%);
		--footer-bg: hsl(40, 37%, 97%);
		--footer-text: hsl(0, 0%, 44%);
		--layer-bg-dark: hsl(0, 0%, 13%);
		--layer-bg-medium: hsl(0, 0%, 17%);
		--text-light: hsl(0, 0%, 84%);
		--text-medium: hsl(0, 0%, 59%);
		--text-dark: hsl(28, 26%, 11%);
		--error: hsl(0, 74%, 42%); /* red-700 */
		--button-bg: hsl(101, 58%, 25%);
		--button-bg-hover: hsl(102, 63%, 32%);
	}

	body {
		color: var(--text-medium);
		background-color: var(--page-bg);
		min-height: 100vh;
		min-height: 100dvh;
	}

	h1 {
		font-family: 'Fjalla One', 'Helvetica Neue', Helvetica, Arial, sans-serif;
	}

	::backdrop {
		background-color: hsla(0, 0%, 0%, 0.7);
		-webkit-backdrop-filter: blur(3px);
		backdrop-filter: blur(3px);
	}

	:any-link {
		text-decoration-line: underline;
	}

	:focus-visible,
	button:active {
		outline: 2px solid currentColor;
		outline-offset: 2px;
	}

	input:focus-visible,
	button[type='submit']:focus-visible,
	button[type='submit']:active {
		outline-color: var(--button-bg-hover);
	}

	input:user-invalid {
		outline: 2px solid var(--error);
		outline-offset: 2px;
	}

	form {
		accent-color: var(--button-bg);
		background-color: var(--layer-bg-dark);
	}

	form::before {
		content: '';
		position: absolute;
		top: -1.25rem;
		left: 0;
		right: 0;
		height: 2.25rem;
		background: url('/paper.png');
		background-size: cover;
	}

	.text-label {
		@apply mb-1 inline-block after:content-[':'];
	}

	.checkbox-label {
		@apply mb-1 inline-flex items-start;
	}

	input:where([type='text'], [type='email']) {
		@apply h-10 w-full max-w-xs rounded-sm bg-[--page-bg] px-2;
	}

	input:where([type='checkbox']) {
		@apply mr-2 mt-1 h-4 w-4 shrink-0;
	}

	.dialog-close-button {
		position: absolute;
		right: 0.5rem;
		top: 0.625rem;
		height: 2rem;
		width: 2rem;
		border-radius: 100%;
		background-color: hsl(0, 0%, 100%);
	}

	.dialog-close-button::before,
	.dialog-close-button::after {
		content: '';
		background-color: hsl(0, 0%, 25%);
		position: absolute;
		left: 1rem;
		top: 0.5rem;
		height: 1rem;
		width: 0.125rem;
		transform: rotate(var(--rotate, 45deg));
	}

	.dialog-close-button::after {
		--rotate: -45deg;
	}

	.dialog-header {
		@apply mr-6 text-lg font-semibold uppercase tracking-wide;
		color: var(--color, currentColor);
	}

	.dialog-header.success {
		--color: var(--button-bg-hover);
	}

	.dialog-header.error {
		--color: var(--error);
	}
</style>
