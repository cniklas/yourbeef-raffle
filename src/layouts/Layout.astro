---
export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="de" class="bg-[--page-bg] text-[--text-medium]">
	<head>
		<meta charset="UTF-8" />
		<!-- <meta name="description" content="Astro description"> -->
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>

		<meta name="robots" content="noindex,follow">
		<!-- Montserrat Regular, Montserrat Bold, Fjalla One -->
	</head>
	<body class="flex flex-col">
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--page-bg: #141414;
		--footer-bg: #faf8f4;
		--footer-text: #6f6f6f;
		--layer-bg-dark: #212121;
		--layer-bg-medium: #2b2b2b;
		--text-light: #d5d5d5;
		--text-medium: #969696;
		--button-bg: #32651b;
		--button-bg-hover: #3e861e;
	}

	body {
		min-height: 100vh;
		min-height: 100dvh;
	}

	:any-link {
		@apply underline;
	}

	:focus-visible {
		outline: 2px solid currentColor;
		outline-offset: 2px;
	}

	input:focus-visible,
	button:focus-visible,
	button:active {
		outline-color: var(--button-bg-hover);
	}
</style>
